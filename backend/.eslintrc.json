{
  "env": {
    "browser": false,
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-unused-vars": ["warn"],
    "no-console": "off",
    "comma-dangle": ["error", "never"],
    "camelcase": ["error", {"allow": ["column_id", "board_id", "user_id", "created_at", "updated_at", "assigned_to", "column_name"]}]
  },
  "ignorePatterns": [
    "node_modules/",
    "*.min.js"
  ]
}
